{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier",
        "prettier/standard"
    ],
    "plugins": [
        "standard",
        "prettier",
        "graphql"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "use": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "space-before-blocks": "off",
        "semi":["error", "never"],
        "no-tabs":"off"
    }
}
